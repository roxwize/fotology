<h1>Make new foto</h1>
<h3><%= link_to "Go back", root_path, class: "mb-3" %></h3>

<%= form_with model: @foto, url: post_create_path, data: {turbo:false} do |f| %>
  <% if @foto.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <% @foto.errors.full_messages.each do |m| %>
        <%= m %>
      <% end %>
    </div>
  <% end %>
  <%= f.label :url, "URL", class: "form-label" %>
  <%= f.url_field :url, class: "form-control mb-3" %>
  <%= f.label :desc, "Description", class: "form-label" %>
  <%= f.text_field :desc, class: "form-control mb-3" %>
  <%= f.submit class: "btn btn-primary", local: true %>
<% end %>